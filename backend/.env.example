# Environment
# Options: development, production
# Debug mode is automatically enabled when ENV=development
ENV=development

# Server Configuration
PORT=3000
FRONTEND_URL=http://localhost:8080

# Backend API Authentication
# Optional: Set this to require API key authentication for backend endpoints
# If not set, authentication is disabled (development mode)
BACKEND_API_KEY=your-backend-api-key-here

# Usage Limits
# Maximum tokens allowed per IP address per reset period
TOKEN_LIMIT_PER_IP=100000
# Hours before usage resets (default: 24 hours)
TOKEN_RESET_PERIOD_HOURS=24

# MongoDB Configuration
# MongoDB connection URL (for local: mongodb://localhost:27017)
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority
MONGODB_URL=mongodb://localhost:27017
# Database name for storing usage tracking data
MONGODB_DATABASE=wrong_by_default

# OpenAI Configuration
# Required: Your OpenAI API key
OPENAI_API_KEY=your-openai-api-key-here
# OpenAI API base URL (default: https://api.openai.com)
OPENAI_API_BASE=https://api.openai.com
# OpenAI Realtime model name (default: gpt-realtime)
OPENAI_MODEL=gpt-realtime
# Voice for audio output (default: marin)
# Options: alloy, echo, fable, onyx, nova, shimmer, marin
OPENAI_VOICE=marin
